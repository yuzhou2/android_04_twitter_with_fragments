<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context="com.yuzhou.twitter.ui.ComposeActivity">

    <ImageView
        android:id="@+id/compose__iv_profile_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="4dp"
        android:src="@drawable/default_profile_1_normal"/>

    <TextView
        android:id="@+id/compose__tv_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/compose__iv_profile_image"
        android:text="User Name"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/compose__tv_screen_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/compose__tv_user_name"
        android:layout_below="@+id/compose__tv_user_name"
        android:paddingTop="2dp"
        android:text="Screen Name"
        android:textColor="#a0a0a0"/>

    <EditText
        android:id="@+id/compose__et_text_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/compose__iv_profile_image"
        android:layout_marginTop="6dp"
        android:background="@drawable/edittext_no_border"
        android:hint="@string/hint_compose"
        android:textColor="#a0a0a0"
        android:textColorHint="#d0d0d0"
        android:theme="@style/AppTheme.EditText"/>

</RelativeLayout>
